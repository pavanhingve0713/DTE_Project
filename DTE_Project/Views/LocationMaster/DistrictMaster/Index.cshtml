@model IEnumerable<DTE_Project.ViewModels.MstDistrictVM>
@{
    ViewData["Title"] = "District Master";
    Layout = "~/Views/Shared/_MainMaster.cshtml";
}
<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>District Master</h4>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Master</a></li>
            <li class="breadcrumb-item"><a href="#">Location Master</a></li>
            <li class="breadcrumb-item active"><a href="#">District Master</a></li>
        </ol>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex align-items-center">
        <div class="col-md-8">
            <h4 class="card-title">District Master</h4>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary shadow sharp me-1">
                Add District
            </a>
        </div>
    </div>
    <div class="card-body">
        <table class="dataTable display responsive nowrap w-100">
            <thead>
                <tr>
                    <th scope="col">Sr. No.</th>
                    <th scope="col">State Name</th>
                    <th scope="col">Division Name</th>
                    <th scope="col">District Name (English)</th>
                    <th scope="col">District Name (Hindi)</th>
                    <th scope="col">District Code</th>
                    <th scope="col">Status</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var district in Model.Select((value, index) => new { value, index }))
                {
                    <tr>
                        <td>@(district.index + 1)</td> <!-- Serial Number -->
                        <td>@district.value.StateNameEng</td>
                        <td>@district.value.DivisionNameEng</td>
                        <td>@district.value.DistrictNameEng</td>
                        <td>@district.value.DistrictNameHin</td>
                        <td>@district.value.DistrictCode</td>
                        <td>
                            @if (district.value.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "DistrictMaster", new { id = district.value.DistrictId })" class="btn btn-outline-primary btn-sm">
                                <i class="fa fa-pencil-alt"></i>
                            </a>
                            <button class="btn btn-outline-danger btn-sm" type="button" onclick="deleteDistrict(@district.value.DistrictId)">
                                <i class="fa fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    function deleteDistrict(districtId) {
        if (confirm('Are you sure you want to delete this district?')) {
            // Add AJAX or form submission logic to delete district
            alert(`Delete functionality for DistrictId: ${districtId} is not implemented.`);
        }
    }
</script>
