@model IEnumerable<DTE_Project.ViewModels.MstBlockVM>

@{
    ViewData["Title"] = "Block Master";
    Layout = "~/Views/Shared/_MainMaster.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>Block Master</h4>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Master</a></li>
            <li class="breadcrumb-item"><a href="#">Location Master</a></li>
            <li class="breadcrumb-item active"><a href="#">Block Master</a></li>
        </ol>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex align-items-center">
        <div class="col-md-8">
            <h4 class="card-title">Block Master</h4>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary shadow sharp me-1">
                Add Block
            </a>
        </div>
    </div>
    <div class="card-body">
        <table class="dataTable display responsive nowrap w-100">
            <thead>
                <tr>
                    <th scope="col">Sr. No.</th>
                    <th scope="col">State Name</th>
                    <th scope="col">Division Name</th>
                    <th scope="col">District Name</th>
                    <th scope="col">Block Name (English)</th>
                    <th scope="col">Block Name (Hindi)</th>
                    <th scope="col">Block Code</th>
                    <th scope="col">Status</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var block in Model.Select((value, index) => new { value, index }))
                {
                    <tr>
                        <td>@(block.index + 1)</td>
                        <td>@block.value.StateNameEng</td>
                        <td>@block.value.DivisionNameEng</td>
                        <td>@block.value.DistrictNameEng</td>
                        <td>@block.value.BlockNameEng</td>
                        <td>@block.value.BlockNameHin</td>
                        <td>@block.value.BlockCode</td>
                        <td>
                            @if (block.value.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "BlockMaster", new { id = block.value.BlockId })" class="btn btn-outline-primary btn-sm">
                                <i class="fa fa-pencil-alt"></i>
                            </a>
                            <button class="btn btn-outline-danger btn-sm" type="button" onclick="deleteBlock(@block.value.BlockId)">
                                <i class="fa fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    function deleteBlock(blockId) {
        if (confirm('Are you sure you want to delete this block?')) {
            // Implement AJAX or form submission for deleting block
            alert(`Delete functionality for BlockId: ${blockId} is not implemented.`);
        }
    }
</script>
